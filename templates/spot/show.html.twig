{% extends 'base.html.twig' %}

{% block title %}Le spot #{{ spot.id }}
{% endblock %}

{% block body %}

	<main class="container">
		<h1 class="text-center m-4">Découvrez les meilleurs spots de la côte Altantique
		</h1>
		<div class="card mt-5 mb-3">
			<img src="{{ spot.picture }}" class="card-img-top" alt="photo du spot de surf {{ spot.spotName }} sur la côte Altantique Française">
			<div class="card-body">
				<h5 class="card-title">{{ spot.spotName }}</h5>
				<p class="card-text">{{ spot.description }}</p>
				<a class="nav-link" href="{{ spot.mapLink }}" target="_blank">
					<i class="fa-solid fa-location-dot"></i>
				</a>

			</div>
		</div>
	</main>

{% endblock %}
